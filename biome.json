{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "*/dist/*",
      "*/.nitro/*",
      "*/.output/*",
      "*/.edgio/*",
      ".netlify"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  }
}
